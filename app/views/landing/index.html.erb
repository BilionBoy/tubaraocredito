<style>
  :root {
      /* New Premium Color Scheme */
      --primary: #00dc82;
      --primary-dark: #00b368;
      --secondary: #a855f7;
      --dark: #0a0a0a;
      --darker: #050505;
      --light: #ffffff;
      --gray: #71717a;
      --surface: #18181b;
      --surface-dark: #111111;

      --gradient-1: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
      --gradient-2: linear-gradient(45deg, var(--dark) 0%, var(--surface) 100%);

      --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.2);
      --shadow: 0 4px 12px rgba(0, 0, 0, 0.3);
      --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.4);

      --radius-sm: 0.5rem;
      --radius: 1rem;
      --radius-lg: 1.5rem;
  }

  body {
      font-family: 'Plus Jakarta Sans', sans-serif;
      background-color: var(--darker);
      color: var(--light);
      line-height: 1.6;
  }

  .navbar {
      background: rgba(5, 5, 5, 0.8);
      backdrop-filter: blur(10px);
      padding: 1rem 0;
      position: fixed;
      width: 100%;
      top: 0;
      z-index: 1000;
  }

  .navbar-brand img {
      height: 65px;
  }

  /* Hero Section */
  .hero {
      min-height: 100vh;
      padding: 8rem 0 4rem;
      background: var(--darker);
      position: relative;
      overflow: hidden;
  }

  .hero::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      background: radial-gradient(circle at 50% 50%, var(--surface) 0%, transparent 70%);
      opacity: 0.4;
  }

  .hero h1 {
      font-size: 4.5rem;
      font-weight: 800;
      line-height: 1.1;
      margin-bottom: 2rem;
      background: var(--gradient-1);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      letter-spacing: -0.02em;
  }

  .hero p {
      font-size: 1.25rem;
      color: var(--gray);
      margin-bottom: 3rem;
      max-width: 600px;
  }

  .btn-primary {
      background: var(--gradient-1);
      border: none;
      padding: 1rem 2.5rem;
      font-weight: 600;
      border-radius: var(--radius);
      transition: all 0.3s ease;
  }

  .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow);
      background: var(--gradient-1);
  }

  /* Features Section */
  .features {
      padding: 8rem 0;
      background: var(--dark);
  }

  .section-title {
      text-align: center;
      margin-bottom: 5rem;
  }

  .section-title h2 {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 1rem;
      background: var(--gradient-1);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
  }

  .section-title p {
      color: var(--gray);
      font-size: 1.25rem;
      max-width: 600px;
      margin: 0 auto;
  }

  .feature-card {
      background: var(--surface);
      border-radius: var(--radius-lg);
      padding: 2.5rem;
      height: 100%;
      transition: all 0.4s ease;
      position: relative;
      overflow: hidden;
  }

  .feature-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: var(--gradient-1);
      opacity: 0;
      transition: opacity 0.4s ease;
      z-index: 0;
  }

  .feature-card:hover {
      transform: translateY(-10px);
  }

  .feature-card:hover::before {
      opacity: 0.05;
  }

  .feature-icon {
      width: 4rem;
      height: 4rem;
      background: var(--gradient-1);
      border-radius: var(--radius);
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 2rem;
      font-size: 1.75rem;
      color: var(--light);
      position: relative;
      z-index: 1;
  }

  .feature-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      position: relative;
      z-index: 1;
  }

  .feature-description {
      color: var(--gray);
      font-size: 1rem;
      position: relative;
      z-index: 1;
  }

  /* Stats Section */
  .stats {
      padding: 6rem 0;
      background: var(--gradient-2);
  }

  .stat-card {
      text-align: center;
      padding: 2rem;
  }

  .stat-number {
      font-size: 3.5rem;
      font-weight: 800;
      background: var(--gradient-1);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 0.5rem;
      line-height: 1;
  }

  .stat-label {
      color: var(--gray);
      font-size: 1.125rem;
      font-weight: 500;
  }

  /* Testimonials Section */
  .testimonials {
      padding: 8rem 0;
      background: var(--dark);
  }

  .testimonial-card {
      background: var(--surface);
      border-radius: var(--radius-lg);
      padding: 2.5rem;
      height: 100%;
      transition: all 0.3s ease;
  }

  .testimonial-card:hover {
      transform: translateY(-5px);
      background: var(--surface-dark);
  }

  .testimonial-content {
      font-size: 1.125rem;
      color: var(--light);
      margin-bottom: 2rem;
      position: relative;
      padding-left: 2rem;
  }

  .testimonial-content::before {
      content: '"';
      position: absolute;
      left: 0;
      top: -0.5rem;
      font-size: 4rem;
      color: var(--primary);
      opacity: 0.2;
      font-family: serif;
  }

  .testimonial-author {
      display: flex;
      align-items: center;
      gap: 1rem;
  }

  .author-avatar {
      width: 3.5rem;
      height: 3.5rem;
      border-radius: 50%;
      background: var(--gradient-1);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--light);
      font-weight: 600;
      font-size: 1.125rem;
  }

  .author-info h4 {
      margin: 0;
      font-size: 1.125rem;
      font-weight: 600;
  }

  .author-info p {
      margin: 0;
      color: var(--gray);
      font-size: 0.875rem;
  }

  /* CTA Section */
  .cta {
      padding: 8rem 0;
      background: var(--darker);
      position: relative;
      overflow: hidden;
  }

  .cta::before {
      content: '';
